<%- include("header") -%>

    <div class="box" id="heading">
        <h1>
            <%= listTitle %>
        </h1>
    </div>

    <div class="box">
        <% newListItems.forEach(function(item){ %>
            <!-- this route is responsible for deleting checked items -->
            <form action="/delete" method="post">
                <div class="item">
                    <!-- submitting a form when checkbox is checked with value value -->
                    <input type="checkbox" name="checkbox" value="<%=item._id%>" onchange="this.form.submit()">
                    <p>
                        <%= item.name %>
                    </p>
                </div>
                <input type="hidden" name="listName" value="<%= listTitle %>" id=""></input>
            </form>
            <% }) %>
                <!-- route for adding new item -->
                <form class="item" action="/" method="post">
                    <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
                    <button name="list" type="submit" value=<%= listTitle %>>+</button>
                </form>
    </div>

    <%- include("footer")-%>